  <!-- Scripts -->
  <script>
    let goodScore = 0;
    let badScore = 0;

    function goodAction(action) {
      goodScore++;
      document.getElementById('goodScore').innerText = goodScore;
      document.getElementById('feedback').innerText = `‚úÖ ${action}: This strengthens engagement, relevance, and skill transfer.`;
    }

    function badAction(action) {
      badScore++;
      document.getElementById('badScore').innerText = badScore;
      document.getElementById('feedback').innerText = `‚ùå ${action}: This reduces motivation, retention, and learner trust.`;
    }
  </script>

